    // =========================
    // UI / WORKBENCH (MANTIDO)
    // =========================
    "workbench.colorTheme": "Tomorrow Night Blue",
    "workbench.iconTheme": "easy-icons",
    "editor.largeFileOptimizations": false,
    "diffEditor.codeLens": true,
    "security.workspace.trust.untrustedFiles": "open",
    // =========================
    // CMAKE / DOTNET (MANTIDO)
    // =========================
    "cmake.generator": "Ninja",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureOnOpen": true,
    "dotnetAcquisitionExtension.sharedExistingDotnetPath": "C:\\Program Files\\dotnet\\dotnet.exe",
    // =========================
    // THEMING (MANTIDO)
    // =========================
    "editor.tokenColorCustomizations": {
        "comments": "#0beb16",
        "strings": "#eaff29",
        "keywords": "#d335c6",
        "numbers": "#1493fa",
        "operators": "#D4D4D4",
        "punctuation": "#D4D4D4",
        "variables": "#f8f8f8",
        "constants": "#4FC1FF",
        "functions": "#DCDCAA",
        "methods": "#DCDCAA",
        "classes": "#4EC9B0",
        "types": "#f8fcfb",
        "tags": "#4EC9B0",
        "settings": "#4EC9B0",
        "entity": "#4EC9B0"
    },
    // =========================
    // OUTROS (AJUSTADO)
    // =========================
    "database-client.autoSync": true,
    "raspberry-pi-pico.python3Path": "${workspaceFolder}\\ml_win\\Scripts\\python.exe",
    "chat.mcp.gallery.enabled": true,
    "claudeCode.preferredLocation": "panel",
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    // üóÇÔ∏è FILE EXCLUSIONS (NOVO - IMPORTANTE)
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/.ipynb_checkpoints": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.egg-info": true,
        "**/venv": true,
        "**/env": true
    },
    // üìù AUTO SAVE
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    // üß† MEMORY/PERFORMANCE
    "python.analysis.memory.keepLibraryLocalVariables": false,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    },
    // üì¶ PACKAGE SPECIFIC
    "notebook.kernelProviderAssociations": [
        {
            "viewType": "jupyter-notebook",
            "kernelProvider": "ms-toolsai.jupyter"
        }
    ]
}