{
    // =========================
    // PYTHON / JUPYTER (ML - AJUSTADO)
    // =========================
    // üéØ CAMINHO CORRETO DO SEU AMBIENTE (ml_win, n√£o ml_env)
    "python.defaultInterpreterPath": "${workspaceFolder}\\ml_win\\Scripts\\python.exe",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.languageServer": "Pylance",
    // ‚úÖ COMPLETIONS E AN√ÅLISE (OTIMIZADO PARA ML)
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src",
        "${workspaceFolder}/notebooks"
    ],
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.indexing": false, // Reduz travamentos
    "python.analysis.memory.keepLibraryAst": false,
    "python.analysis.typeCheckingMode": "off", // Desliga para TensorFlow/PyTorch
    // üìä JUPYTER ‚Äî CONFIGURA√á√ïES OTIMIZADAS
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "jupyter.restoreNotebookState": false,
    "jupyter.askForKernelRestart": false,
    "jupyter.disableJupyterAutoStart": false, // Alterado para false
    "jupyter.executionTimeout": 30, // 30 segundos (n√£o 0)
    "jupyter.enableExtendedPythonKernelCompletions": false,
    "jupyter.jupyterServerType": "local",
    "jupyter.interactiveWindow.creationMode": "perFile",
    // üö´ EVITA CONFLITO COM PYTHON GLOBAL
    "jupyter.kernels.excludePythonEnvironments": [
        "python3",
        "Python 3.*",
        "/usr/bin/python3",
        "conda",
        "base",
        "Conda"
    ],
    // üîß FORMATADOR PARA ML (BLACK)
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=88",
        "--target-version=py310"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.wordBasedSuggestions": "matchingDocuments"
    },
    // üß™ LINTING (AN√ÅLISE DE C√ìDIGO)
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.pylintArgs": [
        "--disable=C0111,C0114,C0115,C0116", // Desativa warnings de docstring
        "--max-line-length=88",
        "--extension-pkg-whitelist=tensorflow,torch,numpy"
    ],
    // üéØ EDITOR SUGGESTIONS (OTIMIZADO PARA ML)
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.parameterHints.enabled": true,
    "editor.parameterHints.cycle": true,
    "editor.inlayHints.enabled": "on",
    "editor.suggest.showMethods": true,
    "editor.suggest.showFunctions": true,
    "editor.suggest.showClasses": true,
    "editor.suggest.showModules": true,
    // üìÅ NOTEBOOK CONFIG
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "notebook.lineNumbers": "on",
    "notebook.output.textLineLimit": 100,
    // üêç TERMINAL CONFIG
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}/src;${env:PYTHONPATH}",
        "TF_CPP_MIN_LOG_LEVEL": "2", // Reduz logs do TensorFlow
        "PYTHONUNBUFFERED": "1"
    },
    "terminal.integrated.cwd": "${workspaceFolder}",
    // üß™ TESTING
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.pytestArgs": [
        "src",
        "-v",
        "--tb=short"
    ],
    // =========================
    // GIT (MANTIDO)
    // =========================
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.ignoreRebaseWarning": true,
    "gitHistory.includeRemoteBranches": true,
    // =========================
    // AUTODOC / AI (MANTIDO)
    // =========================
    "doxdocgen.generic.useGitUserEmail": true,
    "doxdocgen.generic.useGitUserName": true,
    "tabnine.experimentalAutoImports": false,
    "continue.enableTabAutocomplete": true,
    // =========================
