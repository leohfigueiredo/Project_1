{
    "version": "2.0.0",
    "tasks": [
        // ============================================
        // TAREFA 1: ATIVAR AMBIENTE VIRTUAL
        // ============================================
        {
            "label": "Ativar Ambiente ML",
            "type": "shell",
            "command": "${workspaceFolder}/ml_win/Scripts/activate",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        // ============================================
        // TAREFA 2: INSTALAR/ATUALIZAR DEPENDÃŠNCIAS
        // ============================================
        {
            "label": "Instalar Requirements",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "clear": false
            }
        },
        // ============================================
        // TAREFA 3: VERIFICAR AMBIENTE
        // ============================================
        {
            "label": "Verificar Ambiente ML",
            "type": "shell",
            "command": "python",
            "args": [
                "-c",
                "\"import tensorflow as tf; import torch; print(f'TensorFlow: {tf.__version__}'); print(f'PyTorch: {torch.__version__}')\""
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
        // ============================================
        // TAREFA 4: INICIAR JUPYTER NOTEBOOK
        // ============================================
        {
            "label": "Iniciar Jupyter Notebook",
            "type": "shell",
            "command": "jupyter",
            "args": [
                "notebook",
                "--no-browser",
                "--port=8888",
                "--NotebookApp.token=''",
                "--NotebookApp.password=''"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*The Jupyter Notebook is running.*",
                        "endsPattern": ".*Control-C to stop.*"
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            }
        },
        // ============================================
        // TAREFA 5: LIMPAR CACHE PYTHON
        // ============================================
        {
            "label": "Limpar Cache Python",
            "type": "shell",
            "command": "python",
            "args": [
                "-c",
                "\"import os, shutil; [shutil.rmtree(os.path.join(root, '__pycache__'), ignore_errors=True) for root, dirs, files in os.walk('.') if '__pycache__' in dirs]; print('Cache limpo!')\""
            ],
            "problemMatcher": []
        },
        // ============================================
        // TAREFA 6: TESTAR MODELO TENSORFLOW
        // ============================================
        {
            "label": "Testar TensorFlow",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/test_tensorflow.py"
            ],
            "problemMatcher": []
        }
    ]
}